<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}AdopteUnPokemon.com{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/css/style.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Cabin|Didact+Gothic|News+Cycle" rel="stylesheet">
        <link rel="shortcut icon" href="https://assets.pokemon.com/static2/_ui/img/favicon.ico" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="{{ path('app_index') }}">
                    <img src="https://assets.pokemon.com/static2/_ui/img/favicon.ico" width="30" height="30" class="d-inline-block align-top" alt="">
                    AdopteUnPokemon.com
                </a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ad_index') }}">Acheter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Echanger</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Vendre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Estimer</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    {% if app.user %}
                        <ul class="navbar-nav">
                            <li class="nav-item text-white mr-2">Bonjour {{ app.user.firstName }} {{ app.user.lastName }}</li>
                        </ul>

                        <a href="{{ path('logout') }}" class="btn btn-outline-danger">Logout</a>
                    {% else %}
                        <a href="{{ path('login') }}" class="btn btn-light mr-2">Connexion</a>
                        <a href="{{ path('register') }}" class="btn btn-outline-light ">S'inscrire</a>
                    {% endif %}
                </form>
            </div>
        </nav>

        {% block body %}{% endblock %}

        <script src="{{ asset('build/js/app.js') }}"></script>
        <script src="{{ asset('build/js/ajax.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
