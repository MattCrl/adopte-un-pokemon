<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}AdopteUnPokemon.com{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/css/style.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Cabin|Didact+Gothic|News+Cycle" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
        <link rel="shortcut icon" href="https://assets.pokemon.com/static2/_ui/img/favicon.ico" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarToggle">
                <a class="navbar-brand" href="{{ path('app_index') }}">
                    <img src="https://assets.pokemon.com/static2/_ui/img/favicon.ico" width="30" height="30" class="d-inline-block align-top" alt="">
                    AdopteUnPokemon.com
                </a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ad_index') }}">Acheter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ad_new') }}">Vendre</a>
                    </li>



                </ul>
                <form class="form-inline my-2 my-lg-0">
                    {% if app.user %}
                        <ul class="navbar-nav">
                            <li class="nav-item text-white mr-2">Bonjour {{ app.user.firstName }} {{ app.user.lastName }}</li>
                        </ul>

                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user"></i> Mon espace
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('app_index_member') }}">Mes pokémon en vente</a>
                                    <a class="dropdown-item" href="{{ path('app_index_member') }}">Mes pokémon vendus</a>
                                    <a class="dropdown-item" href="{{ path('app_index_member') }}">Mes favoris</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('app_index_member') }}">Mon profil</a>
                                </div>
                            </li>
                        </ul>

                        <a href="{{ path('logout') }}" class="btn btn-outline-light"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
                    {% else %}
                        <a href="{{ path('login') }}" class="btn btn-primary mr-2"><i class="fas fa-sign-in-alt"></i> Connexion</a>
                        <a href="{{ path('register') }}" class="btn btn-outline-light"><i class="fas fa-user-plus"></i> S'inscrire</a>
                    {% endif %}
                </form>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}

        <script src="{{ asset('build/js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
