{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/badges-type.css') }}">
{% endblock %}

{% block body %}
    <div class="banner">

    </div>

    <div class="container">
        {% if ad.isSold %}
            <h1 class="mt-4">{{ ad.title }}</h1>
            <h2>Désolé, ce pokémon n'est plus à vendre</h2>
        {% else %}
                <h1 class="mt-4">{{ ad.title | upper }}</h1>

            {% if app.user %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {% if result == null %}
                    <button type="submit" class="btn btn-outline-primary mt-4"><i class="far fa-heart"></i> Ajouter l'annonce aux favoris</button>
                    {% else %}
                    <button type="submit" class="btn btn-primary mt-4"><i class="fas fa-heart"></i> Retirer l'annonce des favoris</button>
                {% endif %}
                {{ form_end(form) }}
            {% endif %}


            <div class="row">
                <div class="col-12 col-sm-6">
            {% if ad.pokemon.id | length == 1 %}
                <img class="img-fluid" src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/00{{ ad.pokemon.id }}.png" alt="{{ ad.pokemon.name }}">
            {% elseif ad.pokemon.id | length == 2 %}
                <img class="img-fluid" src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/0{{ ad.pokemon.id }}.png" alt="{{ ad.pokemon.name }}">
            {% elseif ad.pokemon.id | length == 3 %}
                <img class="img-fluid" src="https://assets.pokemon.com/assets/cms2/img/pokedex/full/{{ ad.pokemon.id }}.png" alt="{{ ad.pokemon.name }}">
            {% endif %}
                </div>

                <div class="col-12 col-sm-6">
                    <h2>Description</h2>
                    <p>{{ ad.description }}</p>

                </div>
            </div>

            <h2 class="mt-5">Caractéristiques</h2>

            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ ad.pokemon.name }}</td>
                    </tr>
                    <tr>
                        <th>Taille</th>
                        <td>{{ ad.pokemon.height }}m</td>
                    </tr>
                    <tr>
                        <th>Poids</th>
                        <td>{{ ad.pokemon.weight }}kg</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td><span class="badge badge-type badge-type-{{ ad.pokemon.type }}">{{ ad.pokemon.type | capitalize }}</span></td>
                    </tr>
                    <tr>
                        <th>Attaque principale</th>
                        <td>{{ ad.pokemon.ability }}</td>
                    </tr>
                </tbody>
            </table>

            <span class="badge badge-primary badge-price">{{ ad.price }}€</span>



            <p></p>

            <h2 class="mt-5">Contacter le vendeur</h2>
            <h6>Vendeur : {{ ad.user.nickname }}</h6>

            <div class="form-group">
                <textarea class="form-control" rows="5" id="comment"></textarea>
            </div>
        {% endif %}

        <a href="{{ path('ad_index') }}" class="btn btn-primary mb-5">Retour</a>

    </div>

{% endblock %}