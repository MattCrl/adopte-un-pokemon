{% extends 'base.html.twig' %}

{% block title %}New Ad{% endblock %}

{% block body %}
    <div class="banner">

    </div>

    <div class="container">
    <h1 class="mt-5 mb-3">Déposer une annonce</h1>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.description) }}

    {{ form_row(form.location) }}

    {{ form_row(form.price) }}

    {{ form_row(form.pokemon) }}
    <ul id="autocomplete" class="autocomplete-custom"></ul>

    <input type="submit" value="Valider" class="btn btn-primary mt-4">

    {{ form_end(form) }}



    <a href="{{ path('ad_index') }}" class="btn btn-outline-primary mt-3">Revenir à la liste des annonces</a>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/ajax.js') }}"></script>
{% endblock %}
