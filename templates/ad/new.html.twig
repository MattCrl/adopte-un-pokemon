{% extends 'base.html.twig' %}

{% block title %}New Ad{% endblock %}

{% block body %}
    <div class="container">
    <h1>Create new Ad</h1>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.isSold) }}
    {{ form_row(form.image) }}
    {{ form_row(form.user) }}
    {{ form_row(form.location) }}
    {{ form_row(form.category) }}
    {{ form_row(form.price) }}

    {{ form_row(form.pokemon) }}
    <ul id="autocomplete" class="autocomplete-custom"></ul>

    <input type="submit" value="Envoyer" class="mt-4">

    {{ form_end(form) }}



    <a href="{{ path('ad_index') }}">back to list</a>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/ajax.js') }}"></script>
{% endblock %}
