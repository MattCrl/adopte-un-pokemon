{% extends 'base.html.twig' %}

{% block title %}Ad index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/badges-type.css') }}">
{% endblock %}

{% block body %}
    <div class="banner">

    </div>





    <div class="container">
        <h1 class="mt-5 mb-3">Les annonces <span class="text-black-50">({{ my_pager | length }})</span></h1>

    <a href="{{ path('ad_new') }}" class="btn btn-primary mb-4">Poster une annonce</a>

        <div class="filters mb-2">
            <h2>Filtres</h2>

            {{ form_start(filter) }}
            {{ form_widget(filter) }}
            <input type="submit" class="btn btn-primary" value="Filtrer">
            {{ form_end(filter) }}

        </div>


        {{ pagerfanta(my_pager, 'twitter_bootstrap4', { 'omitFirstPage': true}) }}

        <div class="row">
        {% for ad in my_pager.currentPageResults %}
            {% include 'cards-template.html.twig' %}
        {% endfor %}
        </div>

    </div>
{% endblock %}