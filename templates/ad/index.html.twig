{% extends 'base.html.twig' %}

{% block title %}Ad index{% endblock %}

{% block body %}
    <div class="banner">

    </div>

    <div class="container">
        <h1 class="mt-5 mb-3">Toutes les annonces en ligne <span class="text-black-50">({{ ads | length }})</span></h1>

    <a href="{{ path('ad_new') }}" class="btn btn-primary mb-5">Poster une annonce</a>

        <div class="row">
        {% for ad in ads %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card hovercard cards-custom">
                    <div class="cardheader">
                    </div>
                    <div class="avatar">
                        <img alt="" src="{{ ad.pokemon.image }}">
                    </div>
                    <div class="info">
                        <div class="title font-weight-bold">
                            <a href="{{ path('ad_show', {'id': ad.id}) }}">{{ ad.pokemon.name }}</a>
                        </div>
                        <div class="desc price-card">{{ ad.price }}â‚¬</div>
                    </div>
                    <div class="bottom">
                        <a href="{{ path('ad_show', {'id': ad.id}) }}" class="btn btn-primary btn-block mt-3">Voir l'annonce</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}