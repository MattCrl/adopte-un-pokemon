<div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
    <div class="card hovercard cards-custom">
        <div class="cardheader">
        </div>
        <div class="avatar">
            <img alt="" src="{{ ad.pokemon.image }}">
        </div>
        <div class="info">
            <div class="title font-weight-bold">
                <a href="{{ path('ad_show', {'id': ad.id}) }}">{{ ad.pokemon.name }}</a>
            </div>
            <div class="desc price-card mb-2">{{ ad.price }}€</div>
            <div class=""><span class="badge badge-type badge-type-{{ ad.pokemon.type }}">{{ ad.pokemon.type | capitalize }}</span></div>

        </div>
        <div class="bottom">

            {% if app.user and ad.user.email == user.email %}
                <a href="{{ path('ad_show', {'id': ad.id}) }}" class="btn btn-primary mt-1">Voir l'annonce</a>
                <a href="{{ path('ad_edit', {'id': ad.id}) }}" class="btn btn-outline-primary mt-1"><i class="fas fa-edit"></i> Éditer</a>
            {% else %}
                <a href="{{ path('ad_show', {'id': ad.id}) }}" class="btn btn-primary btn-block mt-1">Voir l'annonce</a>
            {% endif %}
        </div>
    </div>
</div>
