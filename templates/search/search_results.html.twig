{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Résultats</h1>
        <div class="row">
            {% for result in results %}
                <div class="card col-12 col-sm-6 col-md-4 col-lg-3 pt-3 mr-3 mb-3 cards-custom">
                    <img class="card-img-top" src="{{ result.pokemon.image }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title text-center font-weight-bold">{{ result.title|slice(0, 15) }}...</h5>
                        <h6 class="text-center font-weight-bold">{{ result.price }} €</h6>
                        <a href="{{ path('ad_show', {'id': result.id}) }}" class="btn btn-primary btn-block">Voir l'annonce</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}