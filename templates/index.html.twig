{% extends 'base.html.twig' %}

{% block body %}
    <header class="header">
        <div class="container search-bar mt-5">
            <h1>Bienvenue sur adopeUnPokemon.com !</h1>
            <p class="ads-count">Actuellement {{ ads|length }} annonces en ligne</p>
        <h2 class="mb-4 main-title"><i class="fas fa-search"></i> RECHERCHER UN POKEMON</h2>

            {{ form_start(form, {'action': path('search_results'), 'method': 'POST'}) }}

        {{ form_end(form) }}
        </div>

        <h3 class="text-center scroll-link">Les annonces en ligne <br />
            <a href="#" id="button-scroll"><i class="fas fa-arrow-down"></i></a>
        </h3>

    </header>
    <div class="container">



        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

