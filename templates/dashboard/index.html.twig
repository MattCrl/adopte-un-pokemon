{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/badges-type.css') }}">
{% endblock %}

{% block body %}
    <div class="banner">

    </div>

    <div class="container">
        <div class="mt-4">
            <h1 class="text-uppercase">Mon espace membre</h1>
        </div>


        <div class="mt-5">
            <h2 class="main-title text-uppercase">Mes pokémon en vente</h2>
        </div>

        <div class="row">
            {% for ad in user.ads %}
                {% include 'cards-template.html.twig' %}
            {% endfor %}
        </div>


        <div class="mt-5">
            <h2 class="main-title text-uppercase">Mes pokémon vendus</h2>
        </div>

        <div class="mt-5">
            <h2 class="main-title text-uppercase">Mes informations personnelles</h2>
        </div>

        <ul class="mt-3">
            <li>Nom : {{ user.firstName }}</li>
            <li>Prénom : {{ user.lastName }}</li>
            <li>Pseudo : {{ user.nickName }}</li>
            <li>E-mail : {{ user.email }}</li>
            <li>Nombre d'annonces en vente : {{ user.ads|length }}</li>
        </ul>



    </div>
{% endblock %}